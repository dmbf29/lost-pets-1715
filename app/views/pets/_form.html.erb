<%= form_with model: @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>
  <%= f.label :species %>
  <%= f.select :species, Pet::SPECIES.sort, {}, class: 'form-select' %>
  <%= f.label :found_on %>
  <%= f.date_field :found_on, class: 'form-control' %>
  <%= f.submit 'Submit', class: 'btn btn-info mt-3' %>
<% end %>
